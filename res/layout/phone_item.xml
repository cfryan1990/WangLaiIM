<?xml version="1.0" encoding="utf-8"?>  
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    >  
    <ImageView 
        android:id="@+id/phone_item_avatar"  
        android:layout_width="40dip" 
        android:layout_height="40dip"
        android:background="@drawable/default_mobile_avatar"
        android:layout_margin="3dip"
        android:layout_centerVertical="true" />  
        
    <TextView android:id="@+id/phone_item_title"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/phone_item_avatar"
        android:layout_alignParentTop="true"
        android:layout_margin="3.0dip" 
        android:singleLine="true"  
        android:ellipsize="marquee"   
        android:gravity="left"
        android:text = "张三"
        android:textSize="18sp"  />  
        
    <TextView android:id="@+id/phone_item_number"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@id/phone_item_avatar"
        android:layout_below="@id/phone_item_title"  
        android:layout_margin="3.0dip"
        android:singleLine="true"  
        android:ellipsize="marquee"  
        android:gravity="left" 
        android:text = "13545674567"
        android:textSize="13.0sp"
        android:textColor="@color/gray" />  
        
    <Button 
        android:id = "@+id/phone_item_add_btn"
        android:layout_width="wrap_content" 
        android:layout_height="30dip"
        android:layout_margin="5dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/skin_common_btn_green_normal"
        android:text = "添加"
        android:textSize="15.0sp"
        android:textColor="@color/white" />
    <Button 
        android:id = "@+id/phone_item_added_btn"
        android:layout_width="wrap_content" 
        android:layout_height="30dip"
        android:layout_margin="5dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/skin_added_friends_btn"
        android:text = "已添加"
        android:textSize="15.0sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:visibility="gone" />
</RelativeLayout>  